<Page x:Class="StudentManagementSystem.App.Views.CoursesView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Courses"
      Background="{StaticResource Brush.Background}">

    <Grid Margin="48">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header Section with Back Button -->
        <Grid Grid.Row="0" Margin="0,0,0,32">
            <Button Content="â† Back" 
                    Style="{StaticResource OutlineButton}"
                    Command="{Binding BackCommand}"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    Padding="12,6"/>
            <StackPanel HorizontalAlignment="Center">
                <TextBlock Text="Course Management" 
                           Style="{StaticResource HeaderH1}"
                           HorizontalAlignment="Center"/>
                <TextBlock Text="Manage course information and schedules" 
                           Style="{StaticResource HeaderH3}"
                           HorizontalAlignment="Center"
                           Foreground="{StaticResource Brush.Text.Secondary}"/>
            </StackPanel>
        </Grid>

        <!-- Courses Card -->
        <Border Grid.Row="1" Style="{StaticResource Card}">
            <Grid Margin="24">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Header with New Course Button -->
                <Grid Grid.Row="0" Margin="0,0,0,16">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel Grid.Column="0" Orientation="Horizontal">
                        <TextBlock Text="Course List" 
                                   Style="{StaticResource HeaderH3}"/>
                        <TextBlock Text="{Binding Courses.Count, StringFormat='({0} courses)'}" 
                                   Style="{StaticResource HeaderH3}"
                                   Foreground="{StaticResource Brush.Text.Secondary}"
                                   Margin="8,0,0,0"/>
                    </StackPanel>
                    <Button Content="New Course" 
                            Style="{StaticResource PrimaryButton}"
                            Command="{Binding NewCourseCommand}"
                            Grid.Column="1"
                            Padding="16,6"/>
                </Grid>

                <!-- Course List -->
                <DataGrid Grid.Row="1" 
                         ItemsSource="{Binding Courses}"
                         SelectedItem="{Binding SelectedCourse}"
                         Style="{StaticResource ModernDataGrid}"
                         AutoGenerateColumns="False">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Course Number" 
                                           Binding="{Binding CourseNumber}" 
                                           Width="150"/>
                        <DataGridTextColumn Header="Course Name" 
                                           Binding="{Binding CourseName}" 
                                           Width="*"/>
                        <DataGridTextColumn Header="Department" 
                                           Binding="{Binding Label}" 
                                           Width="150"/>
                        <DataGridTextColumn Header="Semester" 
                                           Binding="{Binding SemesterText}" 
                                           Width="120"/>
                        <DataGridTemplateColumn Header="Actions" Width="150">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                        <Button Content="Edit" 
                                                Style="{StaticResource OutlineButton}"
                                                Command="{Binding DataContext.EditCourseCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                                CommandParameter="{Binding}"
                                                Margin="0,0,8,0"
                                                Padding="8,4"/>
                                        <Button Content="Delete" 
                                                Style="{StaticResource DangerButton}"
                                                Command="{Binding DataContext.DeleteCourseCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                                CommandParameter="{Binding}"
                                                Padding="8,4"/>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>

                <!-- Bottom Actions -->
                <Button Grid.Row="2" 
                        Content="Main Menu" 
                        Style="{StaticResource OutlineButton}"
                        Command="{Binding BackCommand}"
                        HorizontalAlignment="Left"
                        Margin="0,16,0,0"
                        Padding="20,8"/>
            </Grid>
        </Border>
    </Grid>
</Page>
