<Page x:Class="StudentManagementSystem.App.Views.NewStudentView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="New Student"
      Background="{StaticResource Brush.Background}">

    <Grid Margin="48">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header Section with Back Button -->
        <Grid Grid.Row="0" Margin="0,0,0,32">
            <Button Content="â† Back" 
                    Style="{StaticResource OutlineButton}"
                    Command="{Binding CancelCommand}"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    Padding="12,6"/>
            <StackPanel HorizontalAlignment="Center">
                <TextBlock Text="Add New Student" 
                           Style="{StaticResource HeaderH1}"
                           HorizontalAlignment="Center"/>
                <TextBlock Text="Enter student information below" 
                           Style="{StaticResource HeaderH3}"
                           HorizontalAlignment="Center"
                           Foreground="{StaticResource Brush.Text.Secondary}"/>
            </StackPanel>
        </Grid>

        <!-- Scrollable Form Card -->
        <ScrollViewer Grid.Row="1" 
                      VerticalScrollBarVisibility="Auto"
                      HorizontalScrollBarVisibility="Disabled">
            <Border Style="{StaticResource Card}" 
                    HorizontalAlignment="Stretch"
                    Margin="0,0,0,48">
            <Grid Margin="48">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Left Column -->
                <StackPanel Grid.Column="0" Grid.Row="0" Margin="0,0,24,0">
                    <!-- First Name -->
                    <Label Content="First Name:" Style="{StaticResource ModernLabel}"/>
                    <TextBox Text="{Binding FirstName, UpdateSourceTrigger=PropertyChanged}" 
                             Style="{StaticResource ModernTextBox}"
                             PreviewTextInput="Name_PreviewTextInput"
                             Margin="0,0,0,16"/>

                    <!-- Last Name -->
                    <Label Content="Last Name:" Style="{StaticResource ModernLabel}"/>
                    <TextBox Text="{Binding LastName, UpdateSourceTrigger=PropertyChanged}" 
                             Style="{StaticResource ModernTextBox}"
                             PreviewTextInput="Name_PreviewTextInput"
                             Margin="0,0,0,16"/>

                    <!-- Student ID -->
                    <Label Content="Student ID:" Style="{StaticResource ModernLabel}"/>
                    <TextBox Text="{Binding StudentId, UpdateSourceTrigger=PropertyChanged}" 
                             Style="{StaticResource ModernTextBox}"
                             PreviewTextInput="StudentId_PreviewTextInput"
                             Margin="0,0,0,16"/>

                    <!-- Semester -->
                    <Label Content="Semester:" Style="{StaticResource ModernLabel}"/>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                        <RadioButton Content="Fall" 
                                     IsChecked="{Binding IsFallSemester, UpdateSourceTrigger=PropertyChanged}"
                                     GroupName="Semester"
                                     Margin="0,0,24,0"
                                     VerticalAlignment="Center"/>
                        <RadioButton Content="Spring" 
                                     IsChecked="{Binding IsSpringSemester, UpdateSourceTrigger=PropertyChanged}"
                                     GroupName="Semester"
                                     VerticalAlignment="Center"/>
                    </StackPanel>
                </StackPanel>

                <!-- Right Column -->
                <StackPanel Grid.Column="1" Grid.Row="0">
                    <!-- School Year -->
                    <Label Content="School Year:" Style="{StaticResource ModernLabel}"/>
                    <TextBox Text="{Binding SchoolYear, UpdateSourceTrigger=PropertyChanged}" 
                             Style="{StaticResource ModernTextBox}"
                             PreviewTextInput="SchoolYear_PreviewTextInput"
                             Margin="0,0,0,16"/>

                    <!-- Comments -->
                    <Label Content="Comments:" Style="{StaticResource ModernLabel}"/>
                    <TextBox Text="{Binding Comments, UpdateSourceTrigger=PropertyChanged}" 
                             Style="{StaticResource ModernTextBox}"
                             TextWrapping="Wrap"
                             AcceptsReturn="True"
                             Height="200"
                             VerticalScrollBarVisibility="Auto"
                             Margin="0,0,0,24"/>
                </StackPanel>

                <!-- Buttons (span both columns) -->
                <StackPanel Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="1"
                           Orientation="Horizontal" 
                           HorizontalAlignment="Center"
                           Margin="0,24,0,0">
                    <Button Content="Submit" 
                            Style="{StaticResource PrimaryButton}"
                            Command="{Binding SubmitCommand}"
                            Margin="0,0,16,0"
                            Padding="24,8"/>
                    <Button Content="Cancel" 
                            Style="{StaticResource OutlineButton}"
                            Command="{Binding CancelCommand}"
                            Padding="24,8"/>
                </StackPanel>
            </Grid>
            </Border>
        </ScrollViewer>
    </Grid>
</Page>
