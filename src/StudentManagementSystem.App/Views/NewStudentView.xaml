<Page x:Class="StudentManagementSystem.App.Views.NewStudentView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="New Student"
      Background="{StaticResource Brush.Background}" Height="1047" Width="1456">

    <Grid Margin="48">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header Section -->
        <StackPanel Grid.Row="0" HorizontalAlignment="Center" Margin="0,0,0,48">
            <TextBlock Text="Add New Student" 
                       Style="{StaticResource HeaderH1}"
                       HorizontalAlignment="Center"/>
            <TextBlock Text="Enter student information below" 
                       Style="{StaticResource HeaderH3}"
                       HorizontalAlignment="Center"
                       Foreground="{StaticResource Brush.Text.Secondary}"/>
        </StackPanel>

        <!-- Form Card -->
        <Border Grid.Row="1" 
                Style="{StaticResource Card}" 
                Width="600"
                Height="700"
                HorizontalAlignment="Center"
                VerticalAlignment="Center">
            <StackPanel Margin="32">

                <!-- First Name -->
                <Label Content="First Name:" Style="{StaticResource ModernLabel}"/>
                <TextBox Text="{Binding FirstName, UpdateSourceTrigger=PropertyChanged}" 
                         Style="{StaticResource ModernTextBox}"
                         Margin="0,0,0,16"/>

                <!-- Last Name -->
                <Label Content="Last Name:" Style="{StaticResource ModernLabel}"/>
                <TextBox Text="{Binding LastName, UpdateSourceTrigger=PropertyChanged}" 
                         Style="{StaticResource ModernTextBox}"
                         Margin="0,0,0,16"/>

                <!-- Student ID -->
                <Label Content="Student ID:" Style="{StaticResource ModernLabel}"/>
                <TextBox Text="{Binding StudentId, UpdateSourceTrigger=PropertyChanged}" 
                         Style="{StaticResource ModernTextBox}"
                         Margin="0,0,0,16"/>

                <!-- Semester -->
                <Label Content="Semester:" Style="{StaticResource ModernLabel}"/>
                <ComboBox SelectedValue="{Binding Semester, UpdateSourceTrigger=PropertyChanged}" 
                          Style="{StaticResource ModernComboBox}"
                          Margin="0,0,0,16">
                    <ComboBoxItem Content="Fall"/>
                    <ComboBoxItem Content="Spring"/>
                </ComboBox>

                <!-- Comments -->
                <Label Content="Comments:" Style="{StaticResource ModernLabel}"/>
                <TextBox Text="{Binding Comments, UpdateSourceTrigger=PropertyChanged}" 
                         Style="{StaticResource ModernTextBox}"
                         TextWrapping="Wrap"
                         AcceptsReturn="True"
                         Height="80"
                         VerticalScrollBarVisibility="Auto"
                         Margin="0,0,0,24"/>

                <!-- Buttons -->
                <StackPanel Orientation="Horizontal" 
                           HorizontalAlignment="Center">
                    <Button Content="Submit" 
                            Style="{StaticResource PrimaryButton}"
                            Command="{Binding SubmitCommand}"
                            Margin="0,0,16,0"
                            Padding="24,8"/>
                    <Button Content="Cancel" 
                            Style="{StaticResource OutlineButton}"
                            Command="{Binding CancelCommand}"
                            Padding="24,8"/>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</Page>
