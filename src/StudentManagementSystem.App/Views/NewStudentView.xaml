<Page x:Class="StudentManagementSystem.App.Views.NewStudentView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="New Student"
      Background="{StaticResource Brush.Background}">

    <Grid>
        <!-- Outer grid to center the card -->
        <Grid HorizontalAlignment="Center" VerticalAlignment="Center" Margin="24">
            <Border Style="{StaticResource Card}" 
                    MaxWidth="640" MaxHeight="760" 
                    HorizontalAlignment="Center" VerticalAlignment="Center">
                <!-- Use a Grid so content has finite measure; helps ScrollViewer work reliably -->
                <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled" CanContentScroll="True">
                    <Grid Margin="32">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- Header -->
                        <StackPanel Grid.Row="0" HorizontalAlignment="Center" Margin="0,0,0,16">
                            <TextBlock Text="Add New Student" Style="{StaticResource HeaderH1}" HorizontalAlignment="Center"/>
                            <TextBlock Text="Enter student information below" Style="{StaticResource HeaderH3}" HorizontalAlignment="Center" Foreground="{StaticResource Brush.Text.Secondary}"/>
                        </StackPanel>

                        <!-- Form fields -->
                        <StackPanel Grid.Row="1" Margin="0,0,0,8">
                            <Label Content="First Name:" Style="{StaticResource ModernLabel}"/>
                            <TextBox Text="{Binding FirstName, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource ModernTextBox}" Margin="0,0,0,12"/>
                            <Label Content="Last Name:" Style="{StaticResource ModernLabel}"/>
                            <TextBox Text="{Binding LastName, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource ModernTextBox}" Margin="0,0,0,12"/>
                            <Label Content="Student ID:" Style="{StaticResource ModernLabel}"/>
                            <TextBox Text="{Binding StudentId, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource ModernTextBox}" Margin="0,0,0,12"/>
                            <Label Content="Semester:" Style="{StaticResource ModernLabel}"/>
                            <ComboBox SelectedValue="{Binding Semester, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource ModernComboBox}" Margin="0,0,0,12">
                                <ComboBoxItem Content="Fall"/>
                                <ComboBoxItem Content="Spring"/>
                            </ComboBox>
                            <Label Content="Comments:" Style="{StaticResource ModernLabel}"/>
                            <TextBox Text="{Binding Comments, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource ModernTextBox}"
                                     TextWrapping="Wrap" AcceptsReturn="True" Height="80" VerticalScrollBarVisibility="Auto" Margin="0,0,0,12"/>
                        </StackPanel>

                        <!-- Buttons -->
                        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,8,0,0">
                            <Button Content="Submit" Style="{StaticResource PrimaryButton}" Command="{Binding SubmitCommand}" Margin="0,0,16,0" Padding="24,8"/>
                            <Button Content="Cancel" Style="{StaticResource OutlineButton}" Command="{Binding CancelCommand}" Padding="24,8"/>
                        </StackPanel>
                    </Grid>
                </ScrollViewer>
            </Border>
        </Grid>
    </Grid>
</Page>

