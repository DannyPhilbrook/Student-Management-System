<Page x:Class="StudentManagementSystem.App.Views.SearchStudentsView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Search Students"
      Background="{StaticResource Brush.Background}">
    <Page.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisConverter"/>
    </Page.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
    <Grid Margin="48">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header Section with Back Button -->
        <Grid Grid.Row="0" Margin="0,0,0,32">
            <Button Content="â† Back" 
                    Style="{StaticResource OutlineButton}"
                    Command="{Binding BackCommand}"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    Padding="12,6"/>
            <StackPanel HorizontalAlignment="Center">
                <TextBlock Text="Search Students" 
                           Style="{StaticResource HeaderH1}"
                           HorizontalAlignment="Center"/>
                <TextBlock Text="Find and manage existing students" 
                           Style="{StaticResource HeaderH3}"
                           HorizontalAlignment="Center"
                           Foreground="{StaticResource Brush.Text.Secondary}"/>
            </StackPanel>
        </Grid>

        <!-- Search Card -->
        <Border Grid.Row="1" 
                Style="{StaticResource Card}" 
                Margin="0,0,0,24">
            <StackPanel Margin="24">
                <TextBlock Text="Filter by Status:" 
                           Style="{StaticResource HeaderH3}" 
                           Margin="0,0,0,16"/>

                <!-- Status Checkboxes -->
                <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                    <CheckBox Content="Waiting" 
                             IsChecked="{Binding IsWaitingChecked, UpdateSourceTrigger=PropertyChanged}"
                             Checked="StatusCheckbox_Checked"
                             Unchecked="StatusCheckbox_Unchecked"
                             Margin="0,0,16,0"/>
                    <CheckBox Content="Inactive" 
                             IsChecked="{Binding IsInactiveChecked, UpdateSourceTrigger=PropertyChanged}"
                             Checked="StatusCheckbox_Checked"
                             Unchecked="StatusCheckbox_Unchecked"
                             Margin="0,0,16,0"/>
                    <CheckBox Content="Active" 
                             IsChecked="{Binding IsActiveChecked, UpdateSourceTrigger=PropertyChanged}"
                             Checked="StatusCheckbox_Checked"
                             Unchecked="StatusCheckbox_Unchecked"
                             Margin="0,0,16,0"/>
                    <CheckBox Content="Graduated"
                             IsChecked="{Binding IsGraduatedChecked, UpdateSourceTrigger=PropertyChanged}"
                             Checked="StatusCheckbox_Checked"
                             Unchecked="StatusCheckbox_Unchecked"/>
                </StackPanel>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Student Name Search -->
                    <StackPanel Grid.Column="0" Margin="0,0,16,0">
                        <Label Content="Student Name:" Style="{StaticResource ModernLabel}"/>
                        <TextBox Text="{Binding SearchName, UpdateSourceTrigger=PropertyChanged}" 
                                 Style="{StaticResource ModernTextBox}"/>
                    </StackPanel>

                    <!-- Student ID Search -->
                    <StackPanel Grid.Column="1" Margin="0,0,16,0">
                        <Label Content="Student ID:" Style="{StaticResource ModernLabel}"/>
                        <TextBox Text="{Binding SearchStudentId, UpdateSourceTrigger=PropertyChanged}" 
                                 Style="{StaticResource ModernTextBox}"/>
                    </StackPanel>

                    <!-- Search Button -->
                    <StackPanel Grid.Column="2" VerticalAlignment="Bottom">
                        <Button Content="Search" 
                                Style="{StaticResource PrimaryButton}"
                                Command="{Binding SearchCommand}"
                                Padding="20,8"/>
                    </StackPanel>
                </Grid>
            </StackPanel>
        </Border>

        <!-- Results Card -->
        <Border Grid.Row="2" Style="{StaticResource Card}">
            <Grid Margin="24">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Results Header -->
                <Grid Grid.Row="0" Margin="0,0,0,16">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Student Records" 
                               Style="{StaticResource HeaderH3}"
                               Grid.Column="0"/>
                    <Button Content="New Student" 
                            Style="{StaticResource PrimaryButton}"
                            Command="{Binding GoToNewStudentCommand}"
                            Grid.Column="1"
                            Padding="16,6"/>
                </Grid>

                <!-- Student List or No Results Message -->
                <Grid Grid.Row="1">
                    <DataGrid ItemsSource="{Binding Students}"
                             SelectedItem="{Binding SelectedStudent}"
                             Style="{StaticResource ModernDataGrid}"
                             AutoGenerateColumns="False"
                             IsReadOnly="True"
                             Visibility="{Binding HasSearchResults, Converter={StaticResource BoolToVisConverter}}"
                             MinHeight="200"
                             MouseDoubleClick="DataGrid_MouseDoubleClick">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Full Name" 
                                               Binding="{Binding FullName}" 
                                               Width="*"/>
                            <DataGridTextColumn Header="Student ID" 
                                               Binding="{Binding StudentID}" 
                                               Width="120"/>
                            <DataGridTextColumn Header="Status" 
                                               Binding="{Binding StudentStatus}" 
                                               Width="100"/>
                            <DataGridTextColumn Header="Comments" 
                                               Binding="{Binding Notes}" 
                                               Width="*"/>
                            <DataGridTemplateColumn Header="Actions" Width="250">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                            <Button Content="Edit" 
                                                    Style="{StaticResource OutlineButton}"
                                                    Command="{Binding DataContext.EditStudentCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                                    CommandParameter="{Binding}"
                                                    Margin="0,0,4,0"
                                                    Padding="8,4"/>
                                            <Button Content="Degree Plan" 
                                                    Style="{StaticResource OutlineButton}"
                                                    Command="{Binding DataContext.ViewDegreePlanCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                                    CommandParameter="{Binding}"
                                                    Margin="0,0,4,0"
                                                    Padding="8,4"/>
                                            <Button Content="Delete" 
                                                    Style="{StaticResource DangerButton}"
                                                    Command="{Binding DataContext.DeleteStudentCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                                    CommandParameter="{Binding}"
                                                    Padding="8,4"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                    
                    <!-- No Results Message -->
                    <TextBlock Text="{Binding NoResultsMessage}"
                               Style="{StaticResource HeaderH3}"
                               Foreground="{StaticResource Brush.Text.Secondary}"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               Visibility="{Binding ShowNoResultsMessage, Converter={StaticResource BoolToVisConverter}}"
                               TextAlignment="Center"/>
                </Grid>

                <!-- Bottom Actions -->
                <Button Grid.Row="2" 
                        Content="Main Menu" 
                        Style="{StaticResource OutlineButton}"
                        Command="{Binding BackCommand}"
                        HorizontalAlignment="Left"
                        Margin="0,16,0,0"
                        Padding="20,8"/>
            </Grid>
        </Border>
    </Grid>
    </ScrollViewer>
</Page>
