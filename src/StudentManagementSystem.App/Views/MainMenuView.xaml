<Page x:Class="StudentManagementSystem.App.Views.MainMenuView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Main Menu"
      Background="{StaticResource Brush.Background}">

    <Grid Margin="48">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header Section -->
        <StackPanel Grid.Row="0" HorizontalAlignment="Center" Margin="0,0,0,48">
            <TextBlock Text="Student Management System" 
                       Style="{StaticResource HeaderH1}"
                       HorizontalAlignment="Center"/>
            <TextBlock Text="Choose an option to get started" 
                       Style="{StaticResource HeaderH3}"
                       HorizontalAlignment="Center"
                       Foreground="{StaticResource Brush.Text.Secondary}"/>
        </StackPanel>

        <!-- Cards Section -->
        <UniformGrid Grid.Row="1" 
                     Columns="3" 
                     HorizontalAlignment="Center" 
                     VerticalAlignment="Center">
            
            <!-- New Student Card -->
            <Border Style="{StaticResource Card}" 
                    Width="300" 
                    Height="252">
                <StackPanel HorizontalAlignment="Center" 
                           VerticalAlignment="Center">
                    <TextBlock Text="ðŸ‘¤" 
                               FontSize="48" 
                               HorizontalAlignment="Center" 
                               Margin="0,0,0,16" Height="56" Width="57"/>
                    <TextBlock Text="New Student" 
                               Style="{StaticResource HeaderH3}" 
                               HorizontalAlignment="Center"
                               Margin="0,0,0,8"/>
                    <TextBlock Text="Add a new student to the system" 
                               HorizontalAlignment="Center" 
                               Foreground="{StaticResource Brush.Text.Secondary}"
                               TextWrapping="Wrap"
                               Margin="0,0,0,16"/>
                    <Button Content="Add New Student" 
                            Style="{StaticResource PrimaryButton}"
                            Command="{Binding GoToNewStudentCommand}"/>
                </StackPanel>
            </Border>

            <!-- Search Students Card -->
            <Border Style="{StaticResource Card}" 
                    Width="300" 
                    Height="247">
                <StackPanel HorizontalAlignment="Center" 
                           VerticalAlignment="Center">
                    <TextBlock Text="ðŸ”" 
                               FontSize="48" 
                               HorizontalAlignment="Center" 
                               Margin="0,0,0,16" Height="58"/>
                    <TextBlock Text="Search Students" 
                               Style="{StaticResource HeaderH3}" 
                               HorizontalAlignment="Center"
                               Margin="0,0,0,8"/>
                    <TextBlock Text="Find and manage existing students" 
                               HorizontalAlignment="Center" 
                               Foreground="{StaticResource Brush.Text.Secondary}"
                               TextWrapping="Wrap"
                               Margin="0,0,0,16"/>
                    <Button Content="Search Students" 
                            Style="{StaticResource PrimaryButton}"
                            Command="{Binding GoToSearchStudentsCommand}"/>
                </StackPanel>
            </Border>

            <!-- Courses Card -->
            <Border Style="{StaticResource Card}" 
                    Width="300" 
                    Height="248">
                <StackPanel HorizontalAlignment="Center" 
                           VerticalAlignment="Center">
                    <TextBlock Text="ðŸ“š" 
                               FontSize="48" 
                               HorizontalAlignment="Center" 
                               Margin="0,0,0,16"/>
                    <TextBlock Text="Manage Courses" 
                               Style="{StaticResource HeaderH3}" 
                               HorizontalAlignment="Center"
                               Margin="0,0,0,8"/>
                    <TextBlock Text="Add, edit, and manage course information" 
                               HorizontalAlignment="Center" 
                               Foreground="{StaticResource Brush.Text.Secondary}"
                               TextWrapping="Wrap"
                               Margin="0,0,0,16"/>
                    <Button Content="Manage Courses" 
                            Style="{StaticResource PrimaryButton}"
                            Command="{Binding GoToCoursesCommand}"/>
                </StackPanel>
            </Border>
        </UniformGrid>
    </Grid>
</Page>
