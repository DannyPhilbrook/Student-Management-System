<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib">

    <!-- Color Palette -->
    <Color x:Key="Color.Primary">#0B0B1A</Color>
    <Color x:Key="Color.Primary.Light">#1A1A2E</Color>
    <Color x:Key="Color.Primary.Dark">#0F0F23</Color>
    
    <Color x:Key="Color.Secondary">#16213E</Color>
    <Color x:Key="Color.Secondary.Light">#2A3F5F</Color>
    <Color x:Key="Color.Secondary.Dark">#0E1621</Color>
    
    <Color x:Key="Color.Accent">#E94560</Color>
    <Color x:Key="Color.Accent.Light">#F56A7A</Color>
    <Color x:Key="Color.Accent.Dark">#D63B4F</Color>
    
    <Color x:Key="Color.Surface">#FFFFFF</Color>
    <Color x:Key="Color.Surface.Dark">#F5F5F5</Color>
    <Color x:Key="Color.Background">#FAFAFA</Color>
    
    <Color x:Key="Color.Text.Primary">#212121</Color>
    <Color x:Key="Color.Text.Secondary">#757575</Color>
    <Color x:Key="Color.Text.Disabled">#BDBDBD</Color>
    <Color x:Key="Color.Text.OnPrimary">#FFFFFF</Color>
    
    <Color x:Key="Color.Border">#E0E0E0</Color>
    <Color x:Key="Color.Border.Light">#F0F0F0</Color>
    <Color x:Key="Color.Shadow">#00000020</Color>

    <!-- Brushes -->
    <SolidColorBrush x:Key="Brush.Primary" Color="{StaticResource Color.Primary}"/>
    <SolidColorBrush x:Key="Brush.Primary.Light" Color="{StaticResource Color.Primary.Light}"/>
    <SolidColorBrush x:Key="Brush.Primary.Dark" Color="{StaticResource Color.Primary.Dark}"/>
    
    <SolidColorBrush x:Key="Brush.Secondary" Color="{StaticResource Color.Secondary}"/>
    <SolidColorBrush x:Key="Brush.Secondary.Light" Color="{StaticResource Color.Secondary.Light}"/>
    <SolidColorBrush x:Key="Brush.Secondary.Dark" Color="{StaticResource Color.Secondary.Dark}"/>
    
    <SolidColorBrush x:Key="Brush.Accent" Color="{StaticResource Color.Accent}"/>
    <SolidColorBrush x:Key="Brush.Accent.Light" Color="{StaticResource Color.Accent.Light}"/>
    <SolidColorBrush x:Key="Brush.Accent.Dark" Color="{StaticResource Color.Accent.Dark}"/>
    
    <SolidColorBrush x:Key="Brush.Surface" Color="{StaticResource Color.Surface}"/>
    <SolidColorBrush x:Key="Brush.Surface.Dark" Color="{StaticResource Color.Surface.Dark}"/>
    <SolidColorBrush x:Key="Brush.Background" Color="{StaticResource Color.Background}"/>
    
    <SolidColorBrush x:Key="Brush.Text.Primary" Color="{StaticResource Color.Text.Primary}"/>
    <SolidColorBrush x:Key="Brush.Text.Secondary" Color="{StaticResource Color.Text.Secondary}"/>
    <SolidColorBrush x:Key="Brush.Text.Disabled" Color="{StaticResource Color.Text.Disabled}"/>
    <SolidColorBrush x:Key="Brush.Text.OnPrimary" Color="{StaticResource Color.Text.OnPrimary}"/>
    
    <SolidColorBrush x:Key="Brush.Border" Color="{StaticResource Color.Border}"/>
    <SolidColorBrush x:Key="Brush.Border.Light" Color="{StaticResource Color.Border.Light}"/>

    <!-- Typography -->
    <FontFamily x:Key="Font.Family">Segoe UI</FontFamily>
    <FontFamily x:Key="Font.Family.Mono">Consolas</FontFamily>
    
    <sys:Double x:Key="Font.H1">28</sys:Double>
    <sys:Double x:Key="Font.H2">24</sys:Double>
    <sys:Double x:Key="Font.H3">20</sys:Double>
    <sys:Double x:Key="Font.H4">18</sys:Double>
    <sys:Double x:Key="Font.Body">14</sys:Double>
    <sys:Double x:Key="Font.Caption">12</sys:Double>
    <sys:Double x:Key="Font.Small">10</sys:Double>

    <!-- Spacing -->
    <sys:Double x:Key="Spacing.XS">4</sys:Double>
    <sys:Double x:Key="Spacing.S">8</sys:Double>
    <sys:Double x:Key="Spacing.M">16</sys:Double>
    <sys:Double x:Key="Spacing.L">24</sys:Double>
    <sys:Double x:Key="Spacing.XL">32</sys:Double>
    <sys:Double x:Key="Spacing.XXL">48</sys:Double>

    <!-- Corner Radius -->
    <sys:Double x:Key="Radius.S">4</sys:Double>
    <sys:Double x:Key="Radius.M">8</sys:Double>
    <sys:Double x:Key="Radius.L">12</sys:Double>
    <sys:Double x:Key="Radius.XL">16</sys:Double>

    <!-- Elevation -->
    <sys:Double x:Key="Elevation.1">2</sys:Double>
    <sys:Double x:Key="Elevation.2">4</sys:Double>
    <sys:Double x:Key="Elevation.3">8</sys:Double>
    <sys:Double x:Key="Elevation.4">16</sys:Double>

</ResourceDictionary>
